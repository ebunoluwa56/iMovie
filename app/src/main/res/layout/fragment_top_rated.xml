<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragments.TopRated">

    <TextView
        android:id="@+id/top_rated"
        android:text="Top Rated"
        android:textSize="18sp"
        android:textColor="@color/teal_200"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_topRated"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_rated_recycler_view"
                android:padding="12dp"
                android:layout_width="match_parent"
                tools:listitem="@layout/movies_list"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop" />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar_topRated"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>